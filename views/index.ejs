<html>
<head>
  <title>Blog App</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <ul>
      <% blogPosts.forEach(post => { %>
        <li>
          <h2><%= post.title %></h2>
          <p><%= post.content.substring(0, 100) %>... <a href="/blog/<%= post.id %>">Read More</a></p>
        </li>
      <% }); %>
    </ul>
    <a href="/new">Add New Post</a>
</body>
</html>

